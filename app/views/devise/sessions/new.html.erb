<%= stylesheet_link_tag "devise" %>

<div class="login-container">
  <h2 class='header'>Log in</h2>

  <div class='form-container'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-field">
        <%= f.label :email, class: 'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
      </div>

      <div class="form-field">
        <%= f.label :password, class: 'form-label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-field remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'remember-label' %>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit "Log in", class: 'btn' %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
