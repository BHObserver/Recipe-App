<%= form_with model: recipe, class: 'recipe-form' do |form| %>
  <div class="form-group">
    <%= form.label :photo, class: 'form-label' %><br>
    <%= form.file_field :photo, class: 'form-control' %>
    <% recipe.errors.full_messages_for(:photo).each do |message| %>
      <p class='error-messages'><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :name, class: 'form-label' %><br>
    <%= form.text_field :name, class: 'form-control' %>
    <% recipe.errors.full_messages_for(:name).each do |message| %>
      <p class='error-messages'><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :preparation_time, class: 'form-label' %><br>
    <%= form.number_field :preparation_time, class: 'form-control' %>
    <% recipe.errors.full_messages_for(:preparation_time).each do |message| %>
      <p class='error-messages'><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :cooking_time, class: 'form-label' %><br>
    <%= form.number_field :cooking_time, class: 'form-control' %>
    <% recipe.errors.full_messages_for(:cooking_time).each do |message| %>
      <p class='error-messages'><%= message %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-label' %><br>
    <%= form.text_area :description, rows: 5, class: 'form-control' %><br>
    <% recipe.errors.full_messages_for(:description).each do |message| %>
      <p class='error-messages'><%= message %></p>
    <% end %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save", class: 'button-link btn btn-primary' %>
  </div>
<% end %>
