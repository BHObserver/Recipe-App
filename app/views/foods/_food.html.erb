<tr class='food-row'>
  <td><%= food.name %></td>
  <td><%= food.measurement_unit %></td>
  <td>$<%= food.price %></td>

  <% if with_actions %>
    <td class='action-buttons'>
      <%= link_to "Modify", edit_food_path(food), class: 'info-btn' if can? :update, food %>
      <%= link_to "Delete", food_path(food), data: {
          turbo_method: :delete,
          turbo_confirm: 'Are you sure you want to delete this food?'
      }, class: 'danger-btn' if can? :destroy, food %>
    </td>
  <% end %>
</tr>
